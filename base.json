{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "abandonments:recommended",
    ":configMigration",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":docker",
    ":enableVulnerabilityAlerts",
    ":maintainLockFilesWeekly",
    ":rebaseStalePrs",
    ":separateMultipleMajorReleases",
    "docker:pinDigests",
    "group:recommended",
    "helpers:pinGitHubActionDigests",
    "security:openssf-scorecard",
    "workarounds:all",
    ":automergeRequireAllStatusChecks"
  ],
  "automergeType": "pr",
  "configMigration": true,
  "separateMultipleMajor": true,
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "always",
    "rebaseStalePrs": true,
    "branchTopic": "lock-file-maintenance"
  },
  "nix": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "@cloudflare/workers-types",
        "@cloudflare/workerd-linux-64",
        "wrangler"
      ],
      "automerge": true,
      "ignoreTests": true
    },

    // Group tool versions across Docker and mise.toml
    {
      "description": "Group Go updates from Docker",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["golang"],
      "groupName": "Go version"
    },
    {
      "description": "Group Go updates from mise.toml",
      "matchDatasources": ["golang-version"],
      "matchPackageNames": ["go"],
      "groupName": "Go version"
    },
    {
      "description": "Group uv updates from Docker",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ghcr.io/astral-sh/uv"],
      "groupName": "uv version"
    },
    {
      "description": "Group uv updates from mise.toml",
      "matchDatasources": ["github-releases"],
      "matchPackageNames": ["uv"],
      "groupName": "uv version"
    },
    {
      "description": "Group Bun updates from Docker",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["oven/bun"],
      "groupName": "Bun version"
    },
    {
      "description": "Group Bun updates from mise.toml",
      "matchDatasources": ["github-releases"],
      "matchPackageNames": ["bun"],
      "groupName": "Bun version"
    },
    {
      "description": "Group Node.js updates from Docker",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["node"],
      "groupName": "Node.js version"
    },
    {
      "description": "Group Node.js updates from mise.toml",
      "matchDatasources": ["node-version"],
      "matchPackageNames": ["node", "aqua:nodejs/node"],
      "groupName": "Node.js version"
    },

    {
      "matchPackageNames": [
        "albumentations" // discontinued, the last version available there is good enough
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "terraform"
      ],
      "matchDepTypes": "required_provider",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "elgohr/Github-Release-Action"
      ],
      "allowedVersions": "v5" // Ideally everything should use bare gh commands
    },
    // https://github.com/peter-evans/create-pull-request/issues/4228
    {
      "matchPackageNames": [
        "actions/checkout"
      ],
      "allowedVersions": "<6.0.0"
    },
    {
      "matchPackageNames": [
        "actions/checkout"
      ],
      "matchCurrentVersion": "v6",
      "groupName": "downgrade actions/checkout to v5",
      "overridePackageName": "actions/checkout",
      "replacementVersion": "v5.0.1"
    }
  ]
}